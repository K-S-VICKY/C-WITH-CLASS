#include <iostream>
using namespace std;
class Circle {
  public:
    double getRadius()
    {
        return radius;
    }
    double getArea() 
    {
        return 3.14 * radius * radius;
    }
     void setRadius(double r)
     {
        radius = r;
    }
  private:
    double radius;
};
int main() {
  Circle myCircle;
  double r;
  cout << "Enter the radius of the circle: ";
  cin >> r;
  myCircle.setRadius(r);
  cout << "The area of the circle is: " << myCircle.getArea() << endl;
  return 0;
}
